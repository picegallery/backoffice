{
  "name": "backoffice",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "husky install",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "precommit": "lint-staged",
    "commit": "git cz",
    "commit-no-verify": "git cz --no-verify",
    "version-commit": "lerna version --changelog-preset conventionalcommits --force-publish --no-commit-hooks --include-merged-tags",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic --project-token=${CHROMATIC_PROJECT_TOKEN}",
    "container:build": "docker build -t backoffice .",
    "container:run": "docker run -p 3000:3000 backoffice"
  },
  "dependencies": {
    "@emotion/cache": "^11.11.0",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@fontsource/montserrat": "^5.0.17",
    "@hookform/resolvers": "^3.3.3",
    "@mui/icons-material": "^5.15.13",
    "@mui/lab": "^5.0.0-alpha.170",
    "@mui/material": "^5.15.15",
    "@mui/material-nextjs": "^5.15.0",
    "@mui/x-data-grid": "^7.0.0",
    "@reduxjs/toolkit": "^2.2.2",
    "commitizen": "4.3.0",
    "i18next": "^23.10.1",
    "lint-staged": "15.2.2",
    "next": "14.0.4",
    "next-i18next": "^15.2.0",
    "next-themes": "^0.3.0",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.49.2",
    "react-i18next": "^14.1.0",
    "react-redux": "^9.1.0",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^3.1.0",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.2.25",
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@storybook/addon-a11y": "^7.5.3",
    "@storybook/addon-actions": "^7.5.3",
    "@storybook/addon-docs": "7.6.17",
    "@storybook/addon-essentials": "^8.0.4",
    "@storybook/addon-interactions": "^8.0.4",
    "@storybook/addon-links": "^8.0.4",
    "@storybook/addon-mdx-gfm": "7.6.17",
    "@storybook/addon-onboarding": "^8.0.4",
    "@storybook/addon-viewport": "7.6.17",
    "@storybook/blocks": "^8.0.4",
    "@storybook/jest": "0.2.3",
    "@storybook/nextjs": "^8.0.4",
    "@storybook/node-logger": "7.6.17",
    "@storybook/react": "^8.0.4",
    "@storybook/test": "^8.0.4",
    "@storybook/test-runner": "0.17.0",
    "@storybook/testing-library": "0.2.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "chromatic": "^11.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-storybook": "^0.8.0",
    "husky": "^9.0.11",
    "prettier": "^3.1.1",
    "storybook": "^8.0.4",
    "typescript": "^5"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --config ./.prettierrc.js --write"
    ],
    "**/*.{css,scss,md,html,json}": [
      "prettier --config ./.prettierrc.js --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
